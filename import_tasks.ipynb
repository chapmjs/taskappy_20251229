# Cell 5: Database connection and helper functions
def create_connection():
    """Create a database connection"""
    try:
        connection = mysql.connector.connect(**DB_CONFIG)
        if connection.is_connected():
            print("Successfully connected to MySQL database")
            return connection
    except Error as e:
        print(f"Error: {e}")
        return None

def execute_query(connection, query, params=None):
    """Execute a single query"""
    cursor = connection.cursor()
    try:
        if params:
            cursor.execute(query, params)
        else:
            cursor.execute(query)
        connection.commit()
        return cursor.lastrowid
    except Error as e:
        print(f"Error executing query: {e}")
        connection.rollback()
        return None
    finally:
        cursor.close()

def fetch_one(connection, query, params=None):
    """Fetch one result"""
    cursor = connection.cursor(dictionary=True)
    try:
        if params:
            cursor.execute(query, params)
        else:
            cursor.execute(query)
        return cursor.fetchone()
    except Error as e:
        print(f"Error fetching data: {e}")
        return None
    finally:
        cursor.close()

# Cell 6: Create or get default user
def setup_default_user(connection):
    """Create a default user for migration"""
    # Check if user exists
    check_query = "SELECT user_id FROM users WHERE username = %s"
    existing = fetch_one(connection, check_query, ('john_chapman',))
    
    if existing:
        print(f"Using existing user ID: {existing['user_id']}")
        return existing['user_id']
    
    # Create new user
    insert_query = """
    INSERT INTO users (username, email, full_name) 
    VALUES (%s, %s, %s)
    """
    user_id = execute_query(connection, insert_query, 
                           ('john_chapman', 'john@example.com', 'John Chapman'))
    print(f"Created new user with ID: {user_id}")
    return user_id

# Cell 7: Parse and create categories
def parse_category_hierarchy(category_string):
    """Parse category string into hierarchy"""
    # Handle categories like "5.403 SCM 478" or "3.1 Kids One on One"
    parts = {
        'code': None,
        'name': category_string,
        'parent_code': None,
        'level': 0
    }
    
    # Extract code if present
    code_match = re.match(r'^(\d+(?:\.\d+)*)\s+(.+)', category_string)
    if code_match:
        parts['code'] = code_match.group(1)
        parts['name'] = code_match.group(2)
        
        # Determine parent code
        code_parts = parts['code'].split('.')
        parts['level'] = len(code_parts)
        if len(code_parts) > 1:
            parts['parent_code'] = '.'.join(code_parts[:-1])
    
    return parts

def create_categories(connection, df, user_id):
    """Create all categories from dataframe"""
    categories = df['category'].unique()
    category_map = {}
    category_hierarchy = {}
    
    # First pass: parse all categories
    for cat in categories:
        if pd.isna(cat):
            continue
        parsed = parse_category_hierarchy(cat)
        category_hierarchy[cat] = parsed
    
    # Sort by level to create parents first
    sorted_cats = sorted(category_hierarchy.items(), 
                        key=lambda x: (x[1]['level'], x[0]))
    
    # Second pass: create categories
    code_to_id = {}
    
    for cat_string, parsed in sorted_cats:
        # Find parent ID if exists
        parent_id = None
        if parsed['parent_code'] and parsed['parent_code'] in code_to_id:
            parent_id = code_to_id[parsed['parent_code']]
        
        # Check if category exists
        check_query = """
        SELECT category_id FROM categories 
        WHERE category_name = %s AND user_id = %s
        """
        existing = fetch_one(connection, check_query, (parsed['name'], user_id))
        
        if existing:
            category_id = existing['category_id']
        else:
            # Create category
            insert_query = """
            INSERT INTO categories 
            (parent_category_id, category_code, category_name, full_path, user_id) 
            VALUES (%s, %s, %s, %s, %s)
            """
            
            # Build full path
            full_path = cat_string
            
            category_id = execute_query(connection, insert_query,
                (parent_id, parsed['code'], parsed['name'], full_path, user_id))
        
        category_map[cat_string] = category_id
        if parsed['code']:
            code_to_id[parsed['code']] = category_id
    
    print(f"Created/mapped {len(category_map)} categories")
    return category_map

# Cell 8: Migrate tasks
def parse_date(date_string):
    """Parse various date formats"""
    if pd.isna(date_string):
        return None
    
    # Try different date formats
    formats = [
        '%m/%d/%y %I:%M %p',
        '%m/%d/%y %I:%M:%S %p',
        '%m/%d/%y',
        '%Y-%m-%d %H:%M:%S',
        '%Y-%m-%d'
    ]
    
    for fmt in formats:
        try:
            return datetime.strptime(str(date_string).split(' ')[0] + ' 12:00 AM', '%m/%d/%y %I:%M %p')
        except:
            continue
    
    return None

def migrate_tasks(connection, df, user_id, category_map):
    """Migrate all tasks to the new structure"""
    success_count = 0
    error_count = 0
    errors = []
    
    for idx, row in df.iterrows():
        try:
            # Parse dates
            created_date = parse_date(row.get('create_date_time'))
            
            # Get category ID
            category_id = category_map.get(row.get('category'))
            
            # Map status
            status_map = {
                'Closed': 'Closed',
                'Open': 'Open',
                'Idea': 'Idea',
                'In Progress': 'In Progress'
            }
            status = status_map.get(row.get('status', 'Idea'), 'Idea')
            
            # Handle importance and urgency (convert to int, handle NaN)
            importance = None
            if 'importance' in row and pd.notna(row['importance']):
                try:
                    importance = int(float(row['importance']))
                except:
                    importance = None
            
            urgency = None
            if 'urgency' in row and pd.notna(row['urgency']):
                try:
                    urgency = int(float(row['urgency']))
                except:
                    urgency = None
            
            # Prepare completed_at
            completed_at = None
            if status == 'Closed' and created_date:
                completed_at = created_date  # You can adjust this logic
            
            # Insert task
            insert_query = """
            INSERT INTO tasks 
            (subject, category_id, status, importance, urgency, 
             created_by, created_at, completed_at, assigned_to) 
            VALUES (%s, %s, %s, %s, %s, %s, %s, %s, %s)
            """
            
            # Truncate subject if too long
            subject = str(row.get('subject', 'Untitled'))[:500] if pd.notna(row.get('subject')) else 'Untitled'
            
            task_id = execute_query(connection, insert_query, (
                subject,
                category_id,
                status,
                importance,
                urgency,
                user_id,
                created_date if created_date else datetime.now(),
                completed_at,
                user_id  # Assign to self by default
            ))
            
            if task_id:
                success_count += 1
                if success_count % 100 == 0:
                    print(f"Migrated {success_count} tasks...")
            else:
                error_count += 1
                errors.append(f"Row {idx}: Failed to insert")
                
        except Exception as e:
            error_count += 1
            errors.append(f"Row {idx}: {str(e)}")
            if error_count <= 10:  # Show first 10 errors
                print(f"Error on row {idx}: {e}")
    
    print(f"\nMigration complete!")
    print(f"Successfully migrated: {success_count} tasks")
    print(f"Errors: {error_count}")
    
    if errors and len(errors) <= 20:
        print("\nFirst few errors:")
        for error in errors[:10]:
            print(f"  - {error}")
    
    return success_count, error_count

# Cell 9: Main migration execution
def run_migration():
    """Run the complete migration"""
    connection = create_connection()
    if not connection:
        print("Failed to connect to database")
        return
    
    try:
        print("Starting migration process...")
        print("=" * 50)
        
        # Step 1: Create default user
        print("\n1. Setting up user...")
        user_id = setup_default_user(connection)
        
        # Step 2: Create categories
        print("\n2. Creating categories...")
        category_map = create_categories(connection, df, user_id)
        
        # Step 3: Migrate tasks
        print("\n3. Migrating tasks...")
        success, errors = migrate_tasks(connection, df, user_id, category_map)
        
        print("\n" + "=" * 50)
        print("MIGRATION COMPLETE!")
        print(f"Total tasks migrated: {success}")
        print(f"Total errors: {errors}")
        
    except Exception as e:
        print(f"Migration failed: {e}")
        connection.rollback()
    finally:
        if connection.is_connected():
            connection.close()
            print("\nDatabase connection closed")

# Run the migration
run_migration()

# Cell 10: Verify migration
def verify_migration():
    """Verify the migration by showing some statistics"""
    connection = create_connection()
    if not connection:
        return
    
    cursor = connection.cursor(dictionary=True)
    
    try:
        # Count tasks by status
        cursor.execute("""
            SELECT status, COUNT(*) as count 
            FROM tasks 
            GROUP BY status
        """)
        print("Tasks by status:")
        for row in cursor.fetchall():
            print(f"  {row['status']}: {row['count']}")
        
        # Count tasks by category
        cursor.execute("""
            SELECT c.category_name, COUNT(t.task_id) as count 
            FROM categories c
            LEFT JOIN tasks t ON c.category_id = t.category_id
            GROUP BY c.category_id
            ORDER BY count DESC
            LIMIT 10
        """)
        print("\nTop 10 categories by task count:")
        for row in cursor.fetchall():
            print(f"  {row['category_name']}: {row['count']}")
            
    finally:
        cursor.close()
        connection.close()

verify_migration()

